<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Sign Up" textFill="#7479dc" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="25.0" />
         </font>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox prefHeight="450.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="User Name" textFill="#7a8bdc">
               <font>
                  <Font name="VNTimeH" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="userName">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="175.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password" textFill="#7a8bdc">
               <font>
                  <Font name="VNTimeH" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="password">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="175.0" />
               </VBox.margin>
            </PasswordField>
            <Label text="Confirm Password" textFill="#7a8bdc">
               <font>
                  <Font name="VNTimeH" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="confirmPassword">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="175.0" />
               </VBox.margin>
            </PasswordField>
            <Label text="Email" textFill="#7a8bdc">
               <font>
                  <Font name="VNTimeH" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="email">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="175.0" />
               </VBox.margin>
            </TextField>
            <Region prefHeight="54.0" prefWidth="400.0" />
            <HBox prefHeight="100.0" prefWidth="400.0">
               <children>
                  <Button fx:id="btnSignUp" mnemonicParsing="false" onAction="#btnSignUpPressed" prefHeight="26.0" prefWidth="102.0" text="Sign Up">
                     <HBox.margin>
                        <Insets bottom="20.0" left="30.0" right="70.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnBack" mnemonicParsing="false" onAction="#btnBackPressed" prefWidth="100.0" text="Back">
                     <HBox.margin>
                        <Insets bottom="20.0" left="70.0" right="30.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
