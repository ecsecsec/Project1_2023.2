<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="700.0" prefWidth="1000.0">
         <children>
            <HBox prefHeight="90.0" prefWidth="1000.0" style="-fx-background-color: silver;">
               <children>
                  <Button fx:id="btnNewEvent" mnemonicParsing="false" onAction="#imgNewEventClicked" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: silver;" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../main/icon/home.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="25.0" right="175.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnUserEvent" mnemonicParsing="false" onAction="#btnUserEventClicked" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: silver;">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../main/icon/eventUser.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="btngManagerEvent" mnemonicParsing="false" onAction="#btnManagerEventClicked" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: silver;">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../main/icon/eventManager.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="150.0" right="25.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnPrivateEvent" mnemonicParsing="false" onAction="#imgPrivateEventClicked" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: silver;" textFill="WHITE">
                     <graphic>
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../main/icon/eventManagerhuman.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets left="175.0" right="25.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ScrollPane prefHeight="613.0" prefWidth="1000.0">
               <content>
                  <GridPane fx:id="gridPaneEvent" prefHeight="250.0">
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
