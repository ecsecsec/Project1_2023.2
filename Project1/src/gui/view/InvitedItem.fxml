<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
   <children>
      <VBox prefHeight="250.0" prefWidth="1000.0">
         <children>
            <Label fx:id="lblEventName" text="EventName">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="lblIsPrivate" text="-Private-">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
            <Label fx:id="lblTime" text="Time">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="lblLocation" text="Location">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lblDescription" text="Description">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="142.0" prefWidth="1000.0">
               <children>
                  <Button fx:id="btnAccept" mnemonicParsing="false" onAction="#btnAcceptPressed" prefHeight="50.0" prefWidth="100.0" text="Accept">
                     <HBox.margin>
                        <Insets left="600.0" right="50.0" top="30.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnInvite" mnemonicParsing="false" onAction="#btnInvitePressed" prefHeight="50.0" prefWidth="100.0" text="Invite friends">
                     <HBox.margin>
                        <Insets left="30.0" right="50.0" top="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
