<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label text="Event Management App" textAlignment="CENTER" textFill="#d14d88" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="25.0" />
         </font>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="454.0" prefWidth="322.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="22.0" prefWidth="100.0" text="User Name" textFill="#fc6262">
               <font>
                  <Font name=".VnTimeH" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" right="250.0" top="50.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nameField" prefHeight="30.0" prefWidth="316.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="175.0" />
               </VBox.margin>
            </TextField>
            <Label prefHeight="22.0" prefWidth="100.0" text="Password" textFill="#fc6262">
               <font>
                  <Font name=".VnTimeH" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" right="250.0" top="20.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" prefHeight="30.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="175.0" />
               </VBox.margin>
            </PasswordField>
            <Region prefHeight="110.0" prefWidth="400.0" />
            <HBox prefHeight="112.0" prefWidth="400.0">
               <children>
                  <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#btnLoginPressed" prefHeight="50.0" prefWidth="100.0" text="Log In">
                     <HBox.margin>
                        <Insets bottom="20.0" left="35.0" right="80.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnSignup" mnemonicParsing="false" onAction="#btnSigupPressed" prefHeight="50.0" prefWidth="100.0" text="Sign Up">
                     <HBox.margin>
                        <Insets bottom="20.0" left="80.0" right="35.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="btnForgotpassword" mnemonicParsing="false" onAction="#btnForgotpasswordPressed" prefHeight="50.0" prefWidth="200.0" text="Forgot Password">
               <VBox.margin>
                  <Insets bottom="40.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
