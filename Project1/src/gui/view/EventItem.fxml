<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="250.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="250.0" prefWidth="700.0">
         <children>
            <Label fx:id="lblEventName" text="EventName">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="lblTime" text="Time">
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </Label>
            <Label fx:id="lblLocation" text="Location">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="lblDescription" text="Description">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="142.0" prefWidth="700.0">
               <children>
                  <Button fx:id="btnAccept" mnemonicParsing="false" onAction="#btnAcceptPressed" prefHeight="50.0" prefWidth="100.0" text="Accept">
                     <HBox.margin>
                        <Insets left="350.0" right="50.0" top="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnRequest" mnemonicParsing="false" onAction="#btnRequestPressed" prefHeight="50.0" prefWidth="100.0" text="Request">
                     <HBox.margin>
                        <Insets left="30.0" right="50.0" top="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
