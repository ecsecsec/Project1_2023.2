<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #393E46;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: silver;">
         <children>
            <Label fx:id="lblEventName" text="EventName">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="nameField">
               <VBox.margin>
                  <Insets left="20.0" right="200.0" />
               </VBox.margin>
            </TextField>
            <CheckBox fx:id="checkboxIsPrivate" mnemonicParsing="false" text="Private">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </CheckBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="lblStartTime" text="Start Time">
                           <VBox.margin>
                              <Insets left="20.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <DatePicker fx:id="startTime">
                           <VBox.margin>
                              <Insets left="20.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </DatePicker>
                     </children>
                  </VBox>
                  <VBox prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="lblEndTime" text="End Time">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <DatePicker fx:id="endTime">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </DatePicker>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label fx:id="lblLocation" text="Location">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="LocationField">
               <VBox.margin>
                  <Insets left="20.0" right="200.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lblDescription" text="Description">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="descriptionField">
               <VBox.margin>
                  <Insets left="20.0" right="200.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#btnCreatePressed" prefHeight="30.0" prefWidth="60.0" text="Create">
               <VBox.margin>
                  <Insets bottom="10.0" left="700.0" right="10.0" top="150.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
